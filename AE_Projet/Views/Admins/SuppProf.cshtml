@model AE_Projet.Models.Professeur



@{
    Layout = "_LayoutAdmin";
}
    <section class="categories-section spad">
        <div class="container">
            <div class="section-title">
                <a class="dex-btn " style="background-color: #0039e6;color: white;">Supprimer </a>
            </div>
            <h3>Êtes-vous sûr de vouloir supprimer ?</h3>
            <div>
                <div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nom_Prof)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nom_Prof)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Prenom_Prof)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Prenom_Prof)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CIN_Prof)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CIN_Prof)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Email_Prof)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Email_Prof)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Mdp)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Mdp)
                        </dd>
                    </dl>

                    <form asp-action="SuppProf">
                        <input type="hidden" asp-for="Id_Prof" />
                        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
                        <a asp-action="IndexProf" class="btn btn-success">Annuler</a>
                    </form>
                </div>
            </div>
        </div>

    </section>