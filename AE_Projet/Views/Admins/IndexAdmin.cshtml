@model IEnumerable<AE_Projet.Models.Admin>

@{
    Layout = "_LayoutAdmin";
}

<section class="categories-section spad">
    <div class="container">
        <div class="section-title">
            <h2>Gestion Administration</h2>
            <a asp-action="AjouterAdmin" class="dex-btn " style="background-color: #0039e6;color: white;">Ajouter Administrateur</a>
        </div>
        <div>
            <table class="table table-bordered" style="margin-top: -60px;">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>CIN</th>
                        <th>Email</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nom_Admin)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Prenom_Admin)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CIN_Admin)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email_Admin)
                            </td>
                            
                            <td>
                                <a class="btn btn-outline-warning btn-block" asp-action="ModifierAdmin" asp-route-id="@item.Id_Admin">Modifier</a> 
                                </td>
                            <td>
                                <a class="btn btn-outline-danger btn-block" asp-action="SuppAdmin" asp-route-id="@item.Id_Admin">Supprimer</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>