@model IEnumerable<AE_Projet.Models.Admin>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="AjouterAdmin">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom_Admin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom_Admin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CIN_Admin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email_Admin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mdp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom_Admin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom_Admin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CIN_Admin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email_Admin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mdp)
            </td>
            <td>
                <a asp-action="ModifierAdmin" asp-route-id="@item.Id_Admin">Edit</a> |
                <a asp-action="SuppAdmin" asp-route-id="@item.Id_Admin">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
