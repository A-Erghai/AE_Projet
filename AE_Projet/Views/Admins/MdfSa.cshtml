@model AE_Projet.Models.Salle

@{
    Layout = "_LayoutAdmin";
}

<section class="categories-section spad">
    <div class="container">
        <div class="section-title">
            <h2>Modifier Salle</h2>
        </div>
        <form asp-action="MdfSa">
            <div class="formulaire">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id_Salle" />
                <div class="form-group">
                    <label asp-for="Nom_Salle" class="control-label">Nom Salle</label>
                    <input asp-for="Nom_Salle" class="form-control" />
                    <span asp-validation-for="Nom_Salle" class="text-danger"></span>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-danger">Annuler</a>
                    <input type="submit" value="Sauvgarde" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</section>

