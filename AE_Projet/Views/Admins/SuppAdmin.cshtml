@model AE_Projet.Models.Admin

@{
    Layout = "_LayoutAdmin";
}




<section class="categories-section spad">
    <div class="container">
        <div class="section-title">
            <h2>Gestion Administration</h2>
            <a href="Administration-ajt.html" class="dex-btn " style="background-color: #0039e6;color: white;">Supprimer Administrateur</a>
        </div>
        <h3>Êtes-vous sûr de vouloir supprimer cet utilisateur ?</h3>
        <div>

            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nom_Admin)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nom_Admin)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Prenom_Admin)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Prenom_Admin)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CIN_Admin)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CIN_Admin)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email_Admin)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email_Admin)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Mdp)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Mdp)
                </dd>
            </dl>

            <form asp-action="SuppAdmin">
                <input type="hidden" asp-for="Id_Admin" />
                <input type="submit" value="Supprimer" class="btn btn-danger" /> |
                <a asp-action="IndexAdmin" class="btn btn-danger">Annuler</a>
            </form>
        </div>
    </div>
</section>