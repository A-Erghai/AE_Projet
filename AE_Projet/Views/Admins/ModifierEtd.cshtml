@model AE_Projet.Models.Etudiant


@{
    Layout = "_LayoutAdmin";
}

<section class="categories-section spad">
    <div class="container">
        <div class="section-title">
            <h2>Modifier Etudiant</h2>
        </div>
        <form asp-action="ModifierEtd">
            <div class="formulaire">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Matricule" />
                <div class="form-group">
                    <label asp-for="Matricule" class="control-label">Matricule</label>
                    <input asp-for="Matricule" type="text" class="form-control" />
                    <span asp-validation-for="Matricule" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nom_Etd" class="control-label"></label>
                    <input asp-for="Nom_Etd" class="form-control" />
                    <span asp-validation-for="Nom_Etd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Prenom_Etd" class="control-label"></label>
                    <input asp-for="Prenom_Etd" class="form-control" />
                    <span asp-validation-for="Prenom_Etd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CIN_Etd" class="control-label"></label>
                    <input asp-for="CIN_Etd" class="form-control" />
                    <span asp-validation-for="CIN_Etd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="filiere.Nom_Filiere" class="control-label"></label>
                    <select asp-for="Id_Filiere" class="form-control" asp-items="ViewBag.Nom_Filiere"></select>
                    <span asp-validation-for="filiere.Nom_Filiere" class="text-danger"></span>
                </div>
                <div>
                    <a asp-action="IndexEtd" class="btn btn-danger">Annuler</a>
                    <input type="submit" value="Sauvgarde" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</section>
