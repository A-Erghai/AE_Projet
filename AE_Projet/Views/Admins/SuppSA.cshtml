@model AE_Projet.Models.Salle



@{
    Layout = "_LayoutAdmin";
}
<section class="categories-section spad">
    <div class="container">
        <div class="section-title">
            <a class="dex-btn " style="background-color: #0039e6;color: white;">Supprimer </a>
        </div>
        <h3>Êtes-vous sûr de vouloir supprimer ?</h3>
        <div>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nom_Salle)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nom_Salle)
                    </dd>
                </dl>

                <form asp-action="SuppSa">
                    <input type="hidden" asp-for="Id_Salle" />
                    <input type="submit" value="Supprimer" class="btn btn-danger" /> |
                    <a asp-action="IndexSa" class="btn btn-success">Annuler</a>
